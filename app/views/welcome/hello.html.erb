<div id="main-container">

  <div id="logo-container">
    <a id="logo-link" href="#" class="disabled">
      <figure id="svg-container">
        <%= show_svg('nycycle.svg') %>
      </figure>
    </a>
  </div>

  <figure id="bin-picture" class="hidden">
    <div id="bin-picture-info">
      <p>Look for the blue bin!</p>
      <p>Scroll up and down the block</p>
      <p>if you can't see it here</p>
    </div>

    <%= image_tag('bin.png') %>
  </figure>

  <div id="main-buttons-container" class="visible">
    <button id="user-location" class="main-button location">Use Current Location</button>
    <button id="address-location" class="main-button address">Input A NYC Address</button>
  </div>

  <div id="selection-buttons-container" class="hidden">
    <button id="map-button" class="main-button">Map</button>
    <button id="walking-directions-button" class="main-button">Directions</button>
    <button id="street-view-button" class="main-button">View</button>
  </div>

  <div id="message-container" class="hidden">
  </div>

  <div id="content-container" class="hidden">
    <div id="map-container"></div>
    <div id="walking-directions-container"></div>
    <div id="walking-directions-map"></div>
    <div id="street-view-container"></div>
  </div>

  <div id="address-input-container">
    <%= form_with(url: "/", id: "address-input-form") do %>
    <%= text_field_tag "address", nil, placeholder:"Street Address", id: "street-input", required: true %>
    <%= text_field_tag "city", nil, placeholder:"City", id: "city-input" %>
    <%= text_field_tag "zip", nil, placeholder:"Zip Code", id: "zip-input" %>
    <%= submit_tag "Find Bin", id:"find-bin-button", class: "main-button" %>
    <% end %>
  </div>

</div>